@model LibraryManagement.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/Student/Student.css" rel="stylesheet" />

<div class="registration-container">
    <div class="registration-card">
        <h3>Create a new Librarian account.</h3>
        @using (Html.BeginForm("RegisterAdmin", "Account", FormMethod.Post, new { @class = "form-group", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control inputstyle", placeholder = "Enter your name", required = "required" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control inputstyle", placeholder = "Enter your email", required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control inputstyle", placeholder = "Enter your password", required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control inputstyle", placeholder = "Confirm your password", required = "required" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control inputstyle", placeholder = "Enter phone number", required = "required", maxlength = 12, oninput = "this.value = this.value.replace(/\\D/g,'')" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            <br />
            <button class="btn btn-primary" type="submit">Add</button>
        }
    </div>
</div>

@section scripts{
    <script src="~/JS/AdminUser/adminuser.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

}