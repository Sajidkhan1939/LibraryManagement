@model LibraryManagement.Models.RegisterViewModel

@{
    ViewBag.Title = "Student";
}
<link href="~/css/Student/Student.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Employee</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a data-bs-toggle="modal" data-bs-target="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="bi bi-plus-circle"></i> <span style=" margin-top: 6px;">Add New Employee</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>UseName</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody id="studentdata">
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add User</h3>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("RegisterAdmin", "Manage", FormMethod.Post, new { @class = "form-group", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control inputstyle", placeholder = "Enter your name", required = "required" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control inputstyle", placeholder = "Enter your email", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control inputstyle", placeholder = "Enter your password", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control inputstyle", placeholder = "Confirm your password", required = "required" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control inputstyle", placeholder = "Enter phone number", required = "required" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })                   
                }
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
                <button class="btn btn-default" type="submit">Register</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/JS/AdminUser/adminuser.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

}